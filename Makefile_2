PCC = gcc
ECFLAGS = -I. -Wall
NDEPEND = quest_type.h
IOBJ = main.o quest_types.o
SMYSQLCFLAGS := $(shell mysql_config --cflags --libs)

BIN=main
LD=ld

#------------------------------------------------------
 
all: $(BIN)

%.o: %.c
	$(PCC) $(ECFLAGS) $(SMYSQLCFLAGS) -c $< -o $@
 
$(BIN): $(IOBJ)
	$(LD) -o $@ $^
 
clean: 
	rm -f $(BIN) $(IOBJ)

.PHONY: all dev clean
